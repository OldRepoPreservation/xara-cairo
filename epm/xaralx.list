%product xara-cairo
%copyright 1999-2006 Xara Group Ltd.
%vendor Xara
%license LICENSE
%readme README
%description Xara Illustration Software

$ver=0.4
%version $ver

%format deb
%requires libstd++5
d 755 root root /usr/share/doc/xara-cairo
d 755 root root /usr/share/doc/xara-cairo/examples
d 755 root root /usr/share/doc/xara-cairo/examples
l 000 root root /usr/share/xara-cairo/examples 		/usr/share/doc/xara-cairo/examples

%format rpm
%requires pango
%requires compat-libstdc++
d 755 root root /usr/share/xara-cairo
d 755 root root /usr/share/xara-cairo/examples
f 755 root root /usr/share/xara-cairo/examples 		Designs/*.xar
d 755 root root /usr/share/doc/xara-cairo-${ver}
f 755 root root /usr/share/doc/xara-cairo-${ver}/README	README
f 755 root root /usr/share/doc/xara-cairo-${ver}/LICENSE	LICENSE
f 755 root root /usr/share/doc/xara-cairo-${ver}/GPL	GPL
f 755 root root /usr/share/doc/xara-cairo-${ver}/AUTHORS	AUTHORS

%format all
f 755 root root /usr/bin/xara-cairo 			xara-cairo
f 644 root root /usr/share/applications/xara-cairo.desktop 	xara-cairo.desktop
f 644 root root /usr/share/pixmaps/xara-cairo.xpm 		xara-cairo.xpm
